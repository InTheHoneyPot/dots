configuration {
    display-drun: "Applications:";
    display-window: "Windows:";
    drun-display-format: "{icon} {name}";
    text-color       : @fg0;
    modi: "window,run,drun";
    show-icons: true;
    icon-theme: "Breeze Dark";
  }

  window {
      width:45%;
    }

  element {
      padding: 12;
    }

  inputbar {
      children: [prompt,entry];
    }

@theme "/usr/share/rofi/themes/solarized_alternate.rasi"
